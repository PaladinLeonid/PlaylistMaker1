<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity"
    android:background="@color/white"
    android:paddingLeft="@dimen/main_padding"
    android:paddingRight="@dimen/main_padding">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_back_foreground"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/SettingsTextStyle"
            android:layout_gravity="center"
            android:text="@string/Theme" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchMode"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="ExtraText">>

        <TextView
            android:id="@+id/settingsShareTxt"
            style="@style/SettingsTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/shareit" />

        <ImageButton
            android:id="@+id/settings_share"
            style="@style/SettingsButtonStyle"
            android:src="@drawable/shareico_foreground"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/supportBtnTxt"
            style="@style/SettingsTextStyle"
            android:text="@string/support" />

        <ImageButton
            android:id="@+id/supportBtnImg"
            style="@style/SettingsButtonStyle"
            android:src="@drawable/supportico_foreground"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">>

        <TextView
            android:id="@+id/forwardButtonTxt"
            style="@style/SettingsTextStyle"
            android:layout_width="337dp"
            android:text="@string/useragrement" />

        <ImageButton
            android:id="@+id/forwardButtonImg"
            style="@style/SettingsButtonStyle"
            android:src="@drawable/shareit_foreground"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>
</LinearLayout>