<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">22sp</item>
        <item name="iconSize">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/settings_text_color</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:paddingVertical">@dimen/settings_padding</item>
        <item name="android:iconTint">@color/settings_text_color</item>
    </style>

    <style name="trackName">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/settings_text_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="trackDescription" >
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@color/settings_text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Update" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/update_btn</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">54dp</item>
        <item name="backgroundTint">@color/Update_btn_tint</item>

    </style>
    <style name="Placeholder" >
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
        <item name="android:textColor">@color/settings_text_color</item>
    </style>
</resources>
